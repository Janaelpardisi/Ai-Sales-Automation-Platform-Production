# App Settings
APP_NAME=AI Sales Agent
DEBUG=True
ENVIRONMENT=development
SECRET_KEY=change-this-secret-key-to-something-secure-min-32-characters-long

# Database (on D: drive)
DATABASE_URL=sqlite+aiosqlite:///D:/Ai_Sales_Agent/data/sales_agent.db

# Gemini API
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# Email (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=AI Sales Agent

# Scraping
PLAYWRIGHT_HEADLESS=True
SCRAPING_DELAY=1.0
MAX_CONCURRENT_SCRAPES=5

# Agent Settings
MAX_RESEARCH_RESULTS=50
QUALIFICATION_THRESHOLD=0.7
MAX_FOLLOW_UPS=3

# Paths (on D: drive)
DATA_DIR=D:/Ai_Sales_Agent/data
LOGS_DIR=D:/Ai_Sales_Agent/logs
CHROMA_PERSIST_DIRECTORY=D:/Ai_Sales_Agent/data/chroma

# Logging
LOG_LEVEL=INFO

# CORS (for frontend)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000